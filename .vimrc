" add numbers to lines
    set number
    set relativenumber
" enable colors
    syntax enable
    colorscheme desert
" automatically indent new lines
    set autoindent
" replace tabs with 4 spaces
    set expandtab
" enable and configure automatic folding
    set foldenable
    set foldmethod=syntax
    set foldminlines=11
    set foldnestmax=4
    set foldlevelstart=50
" use wildmenu features for completion
    set wildmenu